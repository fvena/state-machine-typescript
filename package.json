{
  "name": "ts-state-machine",
  "version": "0.1.0",
  "description": "Typescript State Machine library",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "workspaces": [
    "playground/*"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "play:terminal": "npm run dev --workspace=playground/terminal",
    "play:browser": "npm run dev --workspace=playground/browser",
    "size": "size-limit"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "typescript",
    "state machine",
    "library"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "10 kB"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/fvena/ts-state-machine#readme",
  "repository": {
    "type": "git",
    "url": "git+git@github-personal:fvena/ts-state-machine.git"
  },
  "bugs": {
    "url": "https://github.com/fvena/ts-state-machine/issues"
  },
  "author": "Francisco Vena <fvena32@gmail.com>",
  "engines": {
    "node": ">=22.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.11.24",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "personal-style-guide": "^0.6.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "size-limit": "^11.2.0",
    "size-limit-preset-node-lib": "^0.3.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.2",
    "vitest": "^3.1.3"
  }
}
